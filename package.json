{
  "name": "@trvl/picker",
  "description": "A Vue.js datepicker component.",
  "version": "0.1.1",
  "keywords": [
    "vue",
    "datepicker"
  ],
  "main": "dist/picker.umd.min.js",
  "files": [
    "dist",
    "src"
  ],
  "author": "Osinga <osinga@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/TRVL/picker"
  },
  "bugs": {
    "url": "https://github.com/TRVL/picker/issues"
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name picker src/picker/TRVLPicker.vue",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {},
  "peerDependencies": {
    "vue": "^2.5.22"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.22",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "@vue/airbnb"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "vue": "never"
        }
      ],
      "indent": "off",
      "semi": [
        "error",
        "never"
      ],
      "vue/html-indent": [
        "error",
        4,
        {
          "baseIndent": 1
        }
      ],
      "vue/script-indent": [
        "error",
        4,
        {
          "baseIndent": 1
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
